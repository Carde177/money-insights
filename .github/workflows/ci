name: Streamlit CI

on:
  push:
  pull_request:

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: python -m pip install -r requirements.txt

      - name: Verify imports
        run: |
          python - <<EOF
          import streamlit
          import gspread
          import pandas
          import google.auth2
          print("All imports OK")
          EOF
